{
  "screen_name": "client_mode_wizard",
  "windowed_canvas": true,
  "cache_canvases": true,
  "button_map": {
    "a": "select",
    "b": "back",
    "up": "previous",
    "down": "next",
    "left": "noop",
    "right": "noop"
  },
  "background": {
    "layers": [
      { "image_path": "assets/optiondialog/option_dialog_bg_narrow_new.png", "x": 15, "y": 14, "recolor_palette": "pngpineapwizardbg" },
	  { "image_path": "assets/optiondialog/option_dialog_bg_windowed_mask.png", "x": 15, "y": 14 },
	  { "image_path": "assets/optiondialog/option_dialog_bg_outline_narrow.png", "x": 15, "y": 14, "recolor_palette": "pngpineapwizardhlt" }
    ]
  },
  "pages": [
    {
      "page_index": 0,
      "menu_items": [
        {
          "id": "client_mode_wizard_title",
          "unselectable": true,
          "layers": [
            { "x": 100, "y": 25, "text_size": "large", "text_color_palette": "pngpineapwizardwpatitle", "text": "Client Mode Setup" }
          ]
        },
        {
          "id": "ssid",
          "x": 140,
          "y": 70,
          "layers": [
            { "image_path": "assets/keyboard.png", "recolor_palette": "pngpineapwizardicon" },
            { "text": "Network Name", "x": 40, "text_color_palette": "textpineapwizardmenu" }
          ],
          "selected_layers": [
            { "image_path": "assets/keyboard.png", "recolor_palette": "pngpineapwizardiconselect" },
            { "text": "Network Name", "x": 40, "text_color_palette": "textpineapwizardmenuselect" }
          ],
          "target": "edit_string_dialog",
          "variable": "$_SETUP_CLIENT_MODE_SSID"
        },
        {
          "id": "enc",
          "x": 140,
          "y": 105,
          "layers": [
            { "image_path": "assets/menu.png", "recolor_palette": "pngpineapwizardicon" },
            { "text": "Encryption Type", "x": 40, "text_color_palette": "textpineapwizardmenu" }
          ],
          "selected_layers": [
            { "image_path": "assets/menu.png", "recolor_palette": "pngpineapwizardiconselect" },
            { "text": "Encryption Type", "x": 40, "text_color_palette": "textpineapwizardmenuselect" }
          ],
          "target": "option_dialog",
          "variable": "$_SETUP_CLIENT_MODE_ENCRYPTION_TYPE"
        },
        {
          "id": "pass",
          "x": 140,
          "y": 140,
          "layers": [
            { "image_path": "assets/keyboard.png", "recolor_palette": "pngpineapwizardicon" },
            { "text": "Passphrase", "x": 40, "text_color_palette": "textpineapwizardmenu" }
          ],
          "selected_layers": [
            { "image_path": "assets/keyboard.png", "recolor_palette": "pngpineapwizardiconselect" },
            { "text": "Passphrase", "x": 40, "text_color_palette": "textpineapwizardmenuselect" }
          ],
          "target": "edit_string_dialog",
          "variable": "$_SETUP_CLIENT_MODE_PASSPHRASE"
        },
        {
          "id": "save",
          "x": 120,
          "y": 175,
          "layers": [
            { "image_path": "assets/wizard.png", "recolor_palette": "pngpineapwizardicon" },
            { "text": "Save", "x": 40, "text_color_palette": "textpineapwizardmenu" }
          ],
          "selected_layers": [
            { "image_path": "assets/wizard.png", "recolor_palette": "textpineapwizardsaveselect" },
            { "text": "Save", "x": 40, "text_color_palette": "textpineapwizardsaveselect" }
          ],
          "target": "function_save_wifi_client_mode",
          "button_map": {
            "a": "select",
            "b": "back",
            "up": "previous",
            "down": "goto ssid",
            "left": "goto clear",
            "right": "goto clear"
          }
        },
        {
          "id": "clear",
          "x": 250,
          "y": 175,
          "layers": [
            { "image_path": "assets/x.png", "x": 7, "y": 4, "recolor_palette": "pngpineapwizardicon" },
            { "text": "Clear", "x": 40, "text_color_palette": "textpineapwizardmenu" }
          ],
          "selected_layers": [
            { "image_path": "assets/x.png", "x": 7, "y": 4, "recolor_palette": "textpineapwizardclearselect" },
            { "text": "Clear", "x": 40, "text_color_palette": "textpineapwizardclearselect" }
          ],
          "target": "function_clear_client_mode",
          "button_map": {
            "a": "select",
            "b": "back",
            "up": "goto pass",
            "down": "next",
            "left": "goto save",
            "right": "goto save"
          }
        }
      ]
    }
  ]
}
